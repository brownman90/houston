<%= render partial: "projects/header", locals: {project: @project, subtitle: "New Ticket for"} %>

<form id="new_ticket_view" class="full-page" data-mode="type"></form>

<% content_for :javascripts do %>
<script type="text/javascript">
  $(function() {
    new NewTicketView({
      tickets: <%= raw @tickets.to_json %>,
      project: { slug: <%= raw @project.slug.to_json %> },
      labels: <%= raw @labels.to_json %>
    }).render();
  });
</script>
<% end %>
