<% @issues.each do |issue| %>
  <tr class="fire">
    <td style="padding: 0.25em 1em;">
      <%= link_to issue.summary, issue.url, target: "_blank", style: "color: #aaa;" %>
    </td>
    <td style="padding: 0.25em 1em;">
      <% if issue.user %>
        <%= avatar_for(user, size: 36) %><%= issue.user.name %>
      <% else %>
        <%= issue["AssignedTo"]%>
      <% end %>
    </td>
  </tr>
<% end %>
